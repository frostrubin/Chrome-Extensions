{
  "name": "Umlaut Helper",
  "short_name": "UmlautHelper",
  "version": "3.0",
  "manifest_version": 3,
  "description": "Auto-Correct Umlaut misspellings",
  "background":  {
    "service_worker": "background.js"
  },
  "permissions": [
    "input"
  ],
  "input_components": [
    {
      "name": "Umlaut Helper",
      "type": "ime",
      "id": "umlaut_helper",
      "description": "Umlaut Helper",
      "language": "en-US",
      "layouts": ["us::eng"]
    }
  ], 
  "icons": { 
     "16": "icons/016.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "action": { 
    "default_title": "Switch On/Off"
  }
}
